---
import type { CardItem } from "../../types";

interface Props {
  item: CardItem;
  delay: string;
  class?: string;
}

const { item, delay, class: className = "" } = Astro.props;
---

<a
  href={item.url}
  class:list={["card", className]}
  target="_blank"
  rel="noopener noreferrer"
  style={`--delay: ${delay}`}
>
  <div class="card-content">
    <!-- Icon slot -->
    <div class="card-icon">
      <slot name="icon">
        <!-- Default portfolio icon -->
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <rect x="2" y="3" width="20" height="18" rx="2" />
          <path d="M8 21V7h8v14" />
          <path d="M2 9h20" />
        </svg>
      </slot>
    </div>

    <!-- Text content -->
    <div class="card-text">
      <h3 class="card-title">{item.title}</h3>
      <p class="card-description">{item.description}</p>
    </div>

    <!-- Arrow -->
    <div class="card-arrow">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M7 17L17 7M17 7H7M17 7V17" />
      </svg>
    </div>
  </div>

  <!-- Ink spread effect -->
  <div class="ink-effect" aria-hidden="true"></div>
</a>

<style>
  .card {
    position: relative;
    display: block;
    background: var(--ink-gray);
    border: 1px solid var(--ink-lighter);
    border-radius: 8px;
    padding: 2rem;
    text-decoration: none;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.22, 1, 0.36, 1);
    opacity: 0;
    transform: translateY(20px);
    animation: cardReveal 0.6s ease-out forwards;
    animation-delay: var(--delay, 0.1s);
    animation-play-state: paused;
  }

  .card.animate {
    animation-play-state: running;
  }

  @keyframes cardReveal {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .card:hover {
    border-color: var(--vermillion);
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .card-content {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: flex-start;
    gap: 1.25rem;
  }

  /* Card Icon */
  .card-icon {
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    color: var(--paper-cream);
    transition: color 0.3s ease;
  }

  .card:hover .card-icon {
    color: var(--vermillion);
  }

  .card-icon :global(svg) {
    width: 100%;
    height: 100%;
  }

  /* Card Text */
  .card-text {
    flex: 1;
    min-width: 0;
  }

  .card-title {
    font-family: 'Zen Kaku Gothic New', sans-serif;
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--paper-white);
    margin: 0 0 0.5rem 0;
    transition: color 0.3s ease;
  }

  .card:hover .card-title {
    color: var(--paper-white);
  }

  .card-description {
    font-family: 'Cormorant Garamond', serif;
    font-size: 0.95rem;
    color: var(--mist-strong);
    margin: 0;
    line-height: 1.5;
  }

  /* Card Arrow */
  .card-arrow {
    flex-shrink: 0;
    width: 24px;
    height: 24px;
    color: var(--mist);
    transition: all 0.3s ease;
  }

  .card:hover .card-arrow {
    color: var(--vermillion);
    transform: translate(4px, -4px);
  }

  /* Ink Effect */
  .ink-effect {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    background: radial-gradient(circle, var(--vermillion-glow), transparent 70%);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    transition: width 0.6s ease, height 0.6s ease;
    z-index: 0;
    pointer-events: none;
  }

  .card:hover .ink-effect {
    width: 400px;
    height: 400px;
  }
</style>
