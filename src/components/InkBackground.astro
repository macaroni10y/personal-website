---
// InkBackground - Canvas-based ink particle animation
// Creates floating ink droplets and subtle movement in the background
---

<div class="ink-background">
  <canvas id="ink-canvas"></canvas>

  <!-- Static decorative ink splatters -->
  <svg class="ink-splatter splatter-1" viewBox="0 0 100 100" aria-hidden="true">
    <circle cx="50" cy="50" r="30" fill="currentColor" />
    <ellipse cx="20" cy="30" rx="8" ry="12" fill="currentColor" />
    <ellipse cx="75" cy="25" rx="6" ry="10" fill="currentColor" />
    <circle cx="85" cy="60" r="5" fill="currentColor" />
    <ellipse cx="30" cy="80" rx="10" ry="6" fill="currentColor" />
  </svg>

  <svg class="ink-splatter splatter-2" viewBox="0 0 100 100" aria-hidden="true">
    <ellipse cx="50" cy="50" rx="35" ry="25" fill="currentColor" />
    <circle cx="15" cy="40" r="7" fill="currentColor" />
    <ellipse cx="80" cy="35" rx="5" ry="8" fill="currentColor" />
    <circle cx="70" cy="75" r="6" fill="currentColor" />
  </svg>

  <svg class="ink-splatter splatter-3" viewBox="0 0 100 100" aria-hidden="true">
    <circle cx="50" cy="50" r="20" fill="currentColor" />
    <ellipse cx="25" cy="45" rx="12" ry="8" fill="currentColor" />
    <circle cx="78" cy="55" r="8" fill="currentColor" />
    <ellipse cx="45" cy="20" rx="6" ry="10" fill="currentColor" />
  </svg>
</div>

<style>
  .ink-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    overflow: hidden;
    background: radial-gradient(ellipse at 30% 20%, #151515 0%, #0a0a0a 50%, #050505 100%);
  }

  #ink-canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .ink-splatter {
    position: absolute;
    color: var(--ink-lighter, #2a2a2a);
    opacity: 0.15;
    pointer-events: none;
  }

  .splatter-1 {
    width: 300px;
    height: 300px;
    top: 5%;
    right: 10%;
    transform: rotate(-15deg);
    animation: float 20s ease-in-out infinite;
  }

  .splatter-2 {
    width: 200px;
    height: 200px;
    bottom: 15%;
    left: 5%;
    transform: rotate(25deg);
    animation: float 25s ease-in-out infinite reverse;
  }

  .splatter-3 {
    width: 150px;
    height: 150px;
    top: 60%;
    right: 20%;
    transform: rotate(10deg);
    animation: float 18s ease-in-out infinite;
    animation-delay: -5s;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0) rotate(var(--rotation, 0deg));
    }
    50% {
      transform: translateY(-20px) rotate(calc(var(--rotation, 0deg) + 5deg));
    }
  }

  .splatter-1 { --rotation: -15deg; }
  .splatter-2 { --rotation: 25deg; }
  .splatter-3 { --rotation: 10deg; }
</style>

<script>
  class InkParticle {
    x: number;
    y: number;
    size: number;
    speedX: number;
    speedY: number;
    opacity: number;
    life: number;
    maxLife: number;

    constructor(canvas: HTMLCanvasElement) {
      this.x = Math.random() * canvas.width;
      this.y = Math.random() * canvas.height;
      this.size = Math.random() * 3 + 1;
      this.speedX = (Math.random() - 0.5) * 0.3;
      this.speedY = (Math.random() - 0.5) * 0.3 - 0.1; // Slight upward drift
      this.opacity = Math.random() * 0.3 + 0.1;
      this.life = 0;
      this.maxLife = Math.random() * 500 + 300;
    }

    update(canvas: HTMLCanvasElement) {
      this.x += this.speedX;
      this.y += this.speedY;
      this.life++;

      // Fade in and out
      if (this.life < 50) {
        this.opacity = (this.life / 50) * (Math.random() * 0.3 + 0.1);
      } else if (this.life > this.maxLife - 50) {
        this.opacity = ((this.maxLife - this.life) / 50) * 0.3;
      }

      // Reset if out of bounds or life ended
      if (
        this.x < -10 ||
        this.x > canvas.width + 10 ||
        this.y < -10 ||
        this.y > canvas.height + 10 ||
        this.life > this.maxLife
      ) {
        this.reset(canvas);
      }
    }

    reset(canvas: HTMLCanvasElement) {
      this.x = Math.random() * canvas.width;
      this.y = canvas.height + 10;
      this.size = Math.random() * 3 + 1;
      this.speedX = (Math.random() - 0.5) * 0.3;
      this.speedY = (Math.random() - 0.5) * 0.3 - 0.2;
      this.opacity = 0;
      this.life = 0;
      this.maxLife = Math.random() * 500 + 300;
    }

    draw(ctx: CanvasRenderingContext2D) {
      ctx.beginPath();
      ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
      ctx.fillStyle = `rgba(245, 245, 240, ${this.opacity})`;
      ctx.fill();
    }
  }

  function initInkCanvas() {
    const canvas = document.getElementById("ink-canvas") as HTMLCanvasElement;
    if (!canvas) return;

    const ctx = canvas.getContext("2d");
    if (!ctx) return;

    let particles: InkParticle[] = [];
    let mouseX = 0;
    let mouseY = 0;
    let animationId: number;

    function resize() {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
    }

    function createParticles() {
      const particleCount = Math.min(80, Math.floor((canvas.width * canvas.height) / 15000));
      particles = [];
      for (let i = 0; i < particleCount; i++) {
        particles.push(new InkParticle(canvas));
      }
    }

    function animate() {
      if (!ctx) return;
      ctx.clearRect(0, 0, canvas.width, canvas.height);

      particles.forEach((particle) => {
        // Subtle mouse influence
        const dx = mouseX - particle.x;
        const dy = mouseY - particle.y;
        const dist = Math.sqrt(dx * dx + dy * dy);

        if (dist < 150) {
          const force = (150 - dist) / 150;
          particle.speedX -= (dx / dist) * force * 0.02;
          particle.speedY -= (dy / dist) * force * 0.02;
        }

        particle.update(canvas);
        particle.draw(ctx);
      });

      // Draw subtle connecting lines between nearby particles
      ctx.strokeStyle = "rgba(245, 245, 240, 0.03)";
      ctx.lineWidth = 0.5;
      for (let i = 0; i < particles.length; i++) {
        for (let j = i + 1; j < particles.length; j++) {
          const dx = particles[i].x - particles[j].x;
          const dy = particles[i].y - particles[j].y;
          const dist = Math.sqrt(dx * dx + dy * dy);

          if (dist < 100) {
            ctx.beginPath();
            ctx.moveTo(particles[i].x, particles[i].y);
            ctx.lineTo(particles[j].x, particles[j].y);
            ctx.stroke();
          }
        }
      }

      animationId = requestAnimationFrame(animate);
    }

    function handleMouseMove(e: MouseEvent) {
      mouseX = e.clientX;
      mouseY = e.clientY;
    }

    // Initialize
    resize();
    createParticles();
    animate();

    // Event listeners
    window.addEventListener("resize", () => {
      resize();
      createParticles();
    });

    window.addEventListener("mousemove", handleMouseMove);

    // Cleanup on page navigation
    document.addEventListener("astro:before-swap", () => {
      cancelAnimationFrame(animationId);
      window.removeEventListener("mousemove", handleMouseMove);
    });
  }

  // Initialize on page load and after navigation
  document.addEventListener("astro:page-load", initInkCanvas);
</script>
