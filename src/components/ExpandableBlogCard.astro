---
// ExpandableBlogCard - Expandable card for blog articles with ink effect
import { t, type Locale } from "../i18n/translations";
import type { OGPData } from "../lib/ogp";

interface Props {
  title: string;
  description: string;
  articles: OGPData[];
  delay?: string;
  locale: Locale;
}

const { title, description, articles, delay = "0.1s", locale } = Astro.props;
const i18n = t(locale);
const displayArticles = articles.slice(0, 3);
const hasMore = articles.length > 3;
---

<div class="expandable-card" style={`--delay: ${delay}`}>
  <button
    class="card-header"
    type="button"
    aria-expanded="false"
    aria-controls="blog-articles-list"
  >
    <div class="card-content">
      <!-- Icon -->
      <div class="card-icon">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M12 19l7-7 3 3-7 7-3-3z" />
          <path d="M18 13l-1.5-7.5L2 2l3.5 14.5L13 18l5-5z" />
          <path d="M2 2l7.586 7.586" />
          <circle cx="11" cy="11" r="2" />
        </svg>
      </div>

      <!-- Text content -->
      <div class="card-text">
        <h3 class="card-title">{title}</h3>
        <p class="card-description">{description}</p>
      </div>

      <!-- Chevron (expand indicator) -->
      <div class="card-chevron">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M6 9l6 6 6-6" />
        </svg>
      </div>
    </div>

    <!-- Ink spread effect -->
    <div class="ink-effect" aria-hidden="true"></div>
  </button>

  <!-- Expandable articles list -->
  <div class="articles-container" id="blog-articles-list">
    <ul class="articles-list">
      {displayArticles.map((article, index) => (
        <li class="article-item" style={`--article-delay: ${index * 0.08}s`}>
          <a href={article.url} target="_blank" rel="noopener noreferrer" class="article-link">
            {article.image && (
              <div class="article-thumbnail">
                <img src={article.image} alt="" loading="lazy" />
              </div>
            )}
            <div class="article-content">
              <span class="article-title">{article.title}</span>
              {article.description && (
                <span class="article-description">{article.description}</span>
              )}
              {article.siteName && (
                <span class="article-site">{article.siteName}</span>
              )}
            </div>
            <div class="article-meta">
              {article.publishedTime && (
                <span class="article-date">{article.publishedTime.split('T')[0]}</span>
              )}
              <svg class="article-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M7 17L17 7M17 7H7M17 7V17" />
              </svg>
            </div>
          </a>
        </li>
      ))}
    </ul>
    {hasMore && (
      <a href={`/${locale}/blog`} class="see-more-link">
        {i18n.seeMore} â†’
      </a>
    )}
  </div>
</div>

<style>
  .expandable-card {
    position: relative;
    background: var(--ink-gray);
    border: 1px solid var(--ink-lighter);
    border-radius: 8px;
    overflow: hidden;
    opacity: 0;
    transform: translateY(20px);
    animation: cardReveal 0.6s ease-out forwards;
    animation-delay: var(--delay, 0.1s);
    animation-play-state: paused;
    transition: all 0.4s cubic-bezier(0.22, 1, 0.36, 1);
    grid-column: 1 / -1;
  }

  .expandable-card.animate {
    animation-play-state: running;
  }

  @keyframes cardReveal {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .expandable-card:hover {
    border-color: var(--vermillion);
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .expandable-card[data-expanded="true"]:hover {
    transform: translateY(0);
  }

  /* Card Header (Button) */
  .card-header {
    position: relative;
    display: block;
    width: 100%;
    padding: 2rem;
    background: transparent;
    border: none;
    cursor: pointer;
    text-align: left;
    overflow: hidden;
  }

  .card-content {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: flex-start;
    gap: 1.25rem;
  }

  /* Card Icon */
  .card-icon {
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    color: var(--paper-cream);
    transition: color 0.3s ease;
  }

  .expandable-card:hover .card-icon {
    color: var(--vermillion);
  }

  .card-icon svg {
    width: 100%;
    height: 100%;
  }

  /* Card Text */
  .card-text {
    flex: 1;
    min-width: 0;
  }

  .card-title {
    font-family: 'Zen Kaku Gothic New', sans-serif;
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--paper-white);
    margin: 0 0 0.5rem 0;
    transition: color 0.3s ease;
  }

  .card-description {
    font-family: 'Cormorant Garamond', serif;
    font-size: 0.95rem;
    color: var(--mist-strong);
    margin: 0;
    line-height: 1.5;
  }

  /* Chevron */
  .card-chevron {
    flex-shrink: 0;
    width: 24px;
    height: 24px;
    color: var(--mist);
    transition: all 0.4s cubic-bezier(0.22, 1, 0.36, 1);
  }

  .expandable-card:hover .card-chevron {
    color: var(--vermillion);
  }

  .expandable-card[data-expanded="true"] .card-chevron {
    transform: rotate(180deg);
  }

  /* Ink Effect */
  .ink-effect {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    background: radial-gradient(circle, var(--vermillion-glow), transparent 70%);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    transition: width 0.6s ease, height 0.6s ease;
    z-index: 0;
    pointer-events: none;
  }

  .expandable-card:hover .ink-effect {
    width: 400px;
    height: 400px;
  }

  /* Articles Container */
  .articles-container {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.5s cubic-bezier(0.22, 1, 0.36, 1);
  }

  .expandable-card[data-expanded="true"] .articles-container {
    max-height: 600px;
  }

  .articles-list {
    list-style: none;
    margin: 0;
    padding: 0 2rem 1.5rem;
    border-top: 1px solid var(--ink-lighter);
  }

  .article-item {
    opacity: 0;
    transform: translateX(-10px);
    transition: opacity 0.4s ease, transform 0.4s ease;
    transition-delay: var(--article-delay, 0s);
  }

  .expandable-card[data-expanded="true"] .article-item {
    opacity: 1;
    transform: translateX(0);
  }

  .article-link {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    padding: 1rem 0;
    text-decoration: none;
    border-bottom: 1px solid var(--ink-lighter);
    transition: all 0.3s ease;
  }

  .article-thumbnail {
    flex-shrink: 0;
    width: 60px;
    height: 60px;
    border-radius: 4px;
    overflow: hidden;
    background: var(--ink-lighter);
  }

  .article-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .article-item:last-child .article-link {
    border-bottom: none;
  }

  .article-link:hover {
    padding-left: 0.5rem;
  }

  .article-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    min-width: 0;
  }

  .article-title {
    font-family: 'Zen Kaku Gothic New', sans-serif;
    font-size: 1rem;
    font-weight: 500;
    color: var(--paper-cream);
    transition: color 0.3s ease;
  }

  .article-link:hover .article-title {
    color: var(--vermillion);
  }

  .article-description {
    font-family: 'Cormorant Garamond', serif;
    font-size: 0.85rem;
    color: var(--mist);
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .article-site {
    font-family: 'Zen Kaku Gothic New', sans-serif;
    font-size: 0.75rem;
    color: var(--mist);
    opacity: 0.8;
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-shrink: 0;
  }

  .article-date {
    font-family: 'Cormorant Garamond', serif;
    font-size: 0.85rem;
    color: var(--mist);
    white-space: nowrap;
  }

  .article-arrow {
    width: 16px;
    height: 16px;
    color: var(--mist);
    transition: all 0.3s ease;
  }

  .article-link:hover .article-arrow {
    color: var(--vermillion);
    transform: translate(2px, -2px);
  }

  /* See More Link */
  .see-more-link {
    display: block;
    padding: 1rem 2rem 1.5rem;
    font-family: 'Zen Kaku Gothic New', sans-serif;
    font-size: 0.95rem;
    color: var(--mist-strong);
    text-decoration: none;
    transition: color 0.3s ease;
    text-align: right;
  }

  .see-more-link:hover {
    color: var(--vermillion);
  }

  /* Mobile responsiveness */
  @media (max-width: 640px) {
    .expandable-card[data-expanded="true"] .articles-container {
      max-height: 1200px;
    }

    .article-link {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .article-meta {
      width: 100%;
      justify-content: space-between;
    }
  }
</style>

<script>
  function initExpandableCards() {
    const expandableCards = document.querySelectorAll('.expandable-card');

    expandableCards.forEach((card) => {
      const button = card.querySelector('.card-header');
      if (!button) return;

      button.addEventListener('click', () => {
        const isExpanded = card.getAttribute('data-expanded') === 'true';
        card.setAttribute('data-expanded', String(!isExpanded));
        button.setAttribute('aria-expanded', String(!isExpanded));
      });
    });
  }

  document.addEventListener('astro:page-load', initExpandableCards);
</script>
