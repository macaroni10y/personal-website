---
import SectionHeader from "./ui/SectionHeader.astro";
import Card from "./ui/Card.astro";
import ExpandableBlogCard from "./ExpandableBlogCard.astro";
import type { CardItem, Locale } from "../types";
import { fetchFeedArticles } from "../lib/feed";

interface Props {
  links: CardItem[];
  locale: Locale;
}

const { links, locale } = Astro.props;

const blogArticles = await fetchFeedArticles();
---

<section class="links" id="links">
  <div class="links-container">
    <SectionHeader title="Links" />

    <div class="links-grid">
      {links.map((link, index) => (
        link.icon === "blog" && blogArticles.length > 0 ? (
          <ExpandableBlogCard
            title={link.title}
            description={link.description}
            articles={blogArticles}
            delay={`${0.1 + index * 0.1}s`}
            locale={locale}
          />
        ) : (
          <Card
            item={link}
            delay={`${0.1 + index * 0.1}s`}
            class="link-card"
          >
            <Fragment slot="icon">
              {link.icon === "github" && (
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              )}
              {link.icon === "portfolio" && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <rect x="2" y="3" width="20" height="18" rx="2" />
                  <path d="M8 21V7h8v14" />
                  <path d="M2 9h20" />
                </svg>
              )}
              {link.icon === "article" && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                  <path d="M14 2v6h6" />
                  <path d="M16 13H8" />
                  <path d="M16 17H8" />
                  <path d="M10 9H8" />
                </svg>
              )}
              {link.icon === "blog" && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M12 19l7-7 3 3-7 7-3-3z" />
                  <path d="M18 13l-1.5-7.5L2 2l3.5 14.5L13 18l5-5z" />
                  <path d="M2 2l7.586 7.586" />
                  <circle cx="11" cy="11" r="2" />
                </svg>
              )}
            </Fragment>
          </Card>
        )
      ))}
    </div>

    <div class="links-footer">
      <div class="footer-line"></div>
    </div>
  </div>
</section>

<style>
  .links {
    min-height: 80vh;
    padding: 4rem 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .links-container {
    max-width: 1000px;
    width: 100%;
  }

  .links-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .links-footer {
    display: flex;
    align-items: center;
    gap: 2rem;
    margin-top: 4rem;
    padding-top: 2rem;
  }

  .links-footer p {
    font-family: 'Kaushan Script', cursive;
    font-size: 1.25rem;
    color: var(--mist-strong);
    margin: 0;
    white-space: nowrap;
  }

  .footer-line {
    flex: 1;
    height: 1px;
    background: linear-gradient(90deg, var(--mist), transparent);
  }
</style>

<script>
  import { initScrollAnimation, registerAnimation } from "../lib/animations";

  function initLinksAnimations() {
    initScrollAnimation(".links", [".link-card", ".expandable-card"]);
  }

  registerAnimation(initLinksAnimations);
</script>
