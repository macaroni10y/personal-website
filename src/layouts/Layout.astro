---
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";
import type { Locale } from "../i18n/translations";

interface Props {
  title: string;
  description: string;
  locale?: Locale;
}

const {
  title,
  description,
  locale = (Astro.currentLocale as Locale) ?? "ja"
} = Astro.props;
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;1,400&family=Shippori+Mincho:wght@400;500;600;700&family=Zen+Kaku+Gothic+New:wght@400;500;700&family=Kaushan+Script&display=swap"
      rel="stylesheet"
    />

    <!-- View Transitions -->
    <ClientRouter />
  </head>
  <body>
    <slot />

    <!-- Grain Overlay for texture -->
    <div class="grain-overlay" aria-hidden="true"></div>
  </body>
</html>

<style is:global>
  /* Page transition animation - ink flow effect */
  @keyframes inkFlow {
    from {
      clip-path: circle(0% at 50% 50%);
    }
    to {
      clip-path: circle(150% at 50% 50%);
    }
  }

  ::view-transition-old(root) {
    animation: 0.4s ease-out both fade-out;
  }

  ::view-transition-new(root) {
    animation: 0.4s ease-in both inkFlow;
  }

  @keyframes fade-out {
    to {
      opacity: 0;
    }
  }
</style>
