---
import QRCode from "qrcode";
import "../styles/global.css";

const siteUrl = "https://macaroni10y.com";
const qrSvg = await QRCode.toString(siteUrl, {
  type: "svg",
  margin: 2,
  color: {
    dark: "#0a0a0a",
    light: "#f5f5f0",
  },
  errorCorrectionLevel: "M",
});
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <title>macaroni10y | Card</title>

    <!-- PWA / Home Screen -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="macaroni10y" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="theme-color" content="#0a0a0a" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;1,400&family=Shippori+Mincho:wght@400;500;600;700&family=Zen+Kaku+Gothic+New:wght@400;500;700&family=Kaushan+Script&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <main class="card-page">
      <div class="card">
        <!-- Decorative top accent -->
        <div class="accent-line" aria-hidden="true"></div>

        <!-- Avatar -->
        <div class="avatar-wrapper">
          <img
            src="/image.png"
            alt="macaroni10y"
            class="avatar"
          />
          <div class="avatar-ring" aria-hidden="true"></div>
        </div>

        <!-- Info -->
        <div class="info">
          <h1 class="name">macaroni10y</h1>
          <p class="title">Software Engineer</p>
          <p class="location">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
              <circle cx="12" cy="10" r="3" />
            </svg>
            Kyoto, Japan
          </p>
        </div>

        <!-- Divider -->
        <div class="divider" aria-hidden="true">
          <div class="divider-line"></div>
          <div class="divider-dot"></div>
          <div class="divider-line"></div>
        </div>

        <!-- QR Code -->
        <div class="qr-section">
          <div class="qr-code" set:html={qrSvg} />
          <p class="qr-label">Scan to visit</p>
          <p class="qr-url">{siteUrl.replace("https://", "")}</p>
        </div>

        <!-- Social Links -->
        <div class="social-links">
          <a href="https://github.com/macaroni10y" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
            <svg viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
          <a href="https://qiita.com/macaroni_" target="_blank" rel="noopener noreferrer" aria-label="Qiita">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
              <path d="M14 2v6h6" />
              <path d="M16 13H8" />
              <path d="M16 17H8" />
              <path d="M10 9H8" />
            </svg>
          </a>
        </div>

        <!-- Decorative bottom accent -->
        <div class="accent-line bottom" aria-hidden="true"></div>
      </div>
    </main>

    <!-- Grain Overlay -->
    <div class="grain-overlay" aria-hidden="true"></div>
  </body>
</html>

<style>
  .card-page {
    min-height: 100vh;
    min-height: 100dvh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1.5rem;
    background: radial-gradient(ellipse at 50% 30%, #1a1a1a 0%, #0a0a0a 70%);
  }

  .card {
    width: 100%;
    max-width: 380px;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2.5rem 2rem;
    position: relative;
    background: linear-gradient(
      165deg,
      rgba(26, 26, 26, 0.9) 0%,
      rgba(17, 17, 17, 0.95) 50%,
      rgba(10, 10, 10, 0.98) 100%
    );
    border: 1px solid rgba(245, 245, 240, 0.08);
    border-radius: 20px;
    box-shadow:
      0 4px 24px rgba(0, 0, 0, 0.4),
      0 0 80px rgba(229, 77, 66, 0.04),
      inset 0 1px 0 rgba(245, 245, 240, 0.05);
    animation: cardReveal 0.8s cubic-bezier(0.22, 1, 0.36, 1) forwards;
  }

  @keyframes cardReveal {
    from {
      opacity: 0;
      transform: translateY(20px) scale(0.98);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  /* Accent lines */
  .accent-line {
    width: 40px;
    height: 3px;
    background: linear-gradient(90deg, transparent, var(--vermillion), transparent);
    border-radius: 2px;
    margin-bottom: 2rem;
    opacity: 0;
    animation: accentFade 0.6s ease-out 0.3s forwards;
  }

  .accent-line.bottom {
    margin-bottom: 0;
    margin-top: 2rem;
    animation-delay: 1.2s;
  }

  @keyframes accentFade {
    from {
      opacity: 0;
      width: 0;
    }
    to {
      opacity: 1;
      width: 40px;
    }
  }

  /* Avatar */
  .avatar-wrapper {
    position: relative;
    margin-bottom: 1.5rem;
    opacity: 0;
    animation: fadeInUp 0.6s ease-out 0.2s forwards;
  }

  .avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
    display: block;
    position: relative;
    z-index: 1;
  }

  .avatar-ring {
    position: absolute;
    top: -4px;
    left: -4px;
    right: -4px;
    bottom: -4px;
    border-radius: 50%;
    border: 1.5px solid rgba(229, 77, 66, 0.4);
    animation: ringPulse 3s ease-in-out infinite;
  }

  @keyframes ringPulse {
    0%, 100% {
      border-color: rgba(229, 77, 66, 0.2);
      transform: scale(1);
    }
    50% {
      border-color: rgba(229, 77, 66, 0.5);
      transform: scale(1.02);
    }
  }

  /* Info */
  .info {
    text-align: center;
    margin-bottom: 1.5rem;
    opacity: 0;
    animation: fadeInUp 0.6s ease-out 0.4s forwards;
  }

  .name {
    font-family: 'Zen Kaku Gothic New', sans-serif;
    font-size: 1.75rem;
    font-weight: 700;
    letter-spacing: -0.01em;
    color: var(--paper-white);
    margin: 0 0 0.35rem;
    line-height: 1.2;
  }

  .title {
    font-family: 'Kaushan Script', cursive;
    font-size: 1.1rem;
    color: var(--paper-cream);
    margin: 0 0 0.5rem;
    letter-spacing: 0.03em;
  }

  .location {
    font-family: 'Cormorant Garamond', serif;
    font-size: 0.9rem;
    color: var(--mist-strong);
    margin: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.35rem;
  }

  .location svg {
    opacity: 0.7;
    flex-shrink: 0;
  }

  /* Divider */
  .divider {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    width: 60%;
    margin-bottom: 1.5rem;
    opacity: 0;
    animation: fadeIn 0.6s ease-out 0.6s forwards;
  }

  .divider-line {
    flex: 1;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(245, 245, 240, 0.15), transparent);
  }

  .divider-dot {
    width: 4px;
    height: 4px;
    background: var(--vermillion);
    border-radius: 50%;
    opacity: 0.6;
  }

  /* QR Code */
  .qr-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 1.5rem;
    opacity: 0;
    animation: fadeInUp 0.6s ease-out 0.7s forwards;
  }

  .qr-code {
    width: 160px;
    height: 160px;
    padding: 10px;
    background: var(--paper-white);
    border-radius: 12px;
    box-shadow:
      0 2px 12px rgba(0, 0, 0, 0.3),
      inset 0 0 0 1px rgba(0, 0, 0, 0.05);
  }

  .qr-code :global(svg) {
    width: 100%;
    height: 100%;
    display: block;
  }

  .qr-label {
    font-family: 'Cormorant Garamond', serif;
    font-size: 0.8rem;
    color: var(--mist-strong);
    margin: 0.75rem 0 0.15rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    opacity: 0.6;
  }

  .qr-url {
    font-family: 'Zen Kaku Gothic New', sans-serif;
    font-size: 0.8rem;
    color: var(--vermillion);
    margin: 0;
    opacity: 0.8;
  }

  /* Social Links */
  .social-links {
    display: flex;
    gap: 1rem;
    opacity: 0;
    animation: fadeInUp 0.6s ease-out 0.9s forwards;
  }

  .social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: 1px solid rgba(245, 245, 240, 0.1);
    color: var(--paper-cream);
    transition: all 0.3s ease;
  }

  .social-links a:hover {
    border-color: var(--vermillion);
    color: var(--vermillion);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(229, 77, 66, 0.2);
  }

  .social-links svg {
    width: 18px;
    height: 18px;
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(16px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  /* Small screen adjustments */
  @media (max-height: 680px) {
    .card {
      padding: 1.5rem 1.5rem;
    }

    .avatar {
      width: 80px;
      height: 80px;
    }

    .avatar-ring {
      top: -3px;
      left: -3px;
      right: -3px;
      bottom: -3px;
    }

    .accent-line {
      margin-bottom: 1.25rem;
    }

    .accent-line.bottom {
      margin-top: 1.25rem;
    }

    .avatar-wrapper {
      margin-bottom: 1rem;
    }

    .info {
      margin-bottom: 1rem;
    }

    .divider {
      margin-bottom: 1rem;
    }

    .qr-code {
      width: 130px;
      height: 130px;
      padding: 8px;
    }

    .qr-section {
      margin-bottom: 1rem;
    }

    .name {
      font-size: 1.5rem;
    }
  }
</style>
