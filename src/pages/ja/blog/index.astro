---
import ContentLayout from "../../../layouts/ContentLayout.astro";
import { t } from "../../../i18n/translations";
import { fetchFeedArticles } from "../../../lib/feed";

const locale = "ja";
const i18n = t(locale);

// Fetch blog articles from Atom feed at build time
const blogArticles = await fetchFeedArticles();
---

<ContentLayout
  title={`${i18n.blog.title} | ${i18n.meta.title}`}
  description={i18n.meta.description}
  locale={locale}
>
  <h1>{i18n.blog.title}</h1>

  <div class="blog-list">
    {blogArticles.map((article, index) => (
      <article class="blog-card" style={`--delay: ${index * 0.08}s`}>
        <a href={article.url} target="_blank" rel="noopener noreferrer" class="blog-link">
          {article.image && (
            <div class="blog-thumbnail">
              <img src={article.image} alt="" loading="lazy" />
            </div>
          )}
          <div class="blog-content">
            <span class="blog-title">{article.title}</span>
            {article.description && (
              <p class="blog-description">{article.description}</p>
            )}
            {article.siteName && (
              <span class="blog-site">{article.siteName}</span>
            )}
          </div>
          <div class="blog-meta">
            {article.publishedTime && (
              <span class="blog-date">{article.publishedTime.split('T')[0]}</span>
            )}
            <svg class="blog-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M7 17L17 7M17 7H7M17 7V17" />
            </svg>
          </div>
        </a>
      </article>
    ))}
  </div>

  {blogArticles.length === 0 && (
    <p class="no-articles">記事がまだありません</p>
  )}

  <div class="back-link-container">
    <a href={`/${locale}#links`} class="back-link">
      {i18n.blog.backToTop}
    </a>
  </div>
</ContentLayout>

<style>
  h1 {
    font-family: 'Cormorant Garamond', serif;
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 400;
    font-style: italic;
    margin: 0 0 2rem 0;
    color: var(--paper-white);
  }

  .blog-list {
    display: grid;
    gap: 1rem;
  }

  .blog-card {
    background: var(--ink-gray);
    border: 1px solid var(--ink-lighter);
    border-radius: 8px;
    overflow: hidden;
    opacity: 0;
    transform: translateY(20px);
    animation: cardReveal 0.5s ease-out forwards;
    animation-delay: var(--delay, 0s);
    transition: all 0.3s ease;
  }

  .blog-card:hover {
    border-color: var(--vermillion);
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }

  @keyframes cardReveal {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .blog-link {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .blog-link:hover {
    padding-left: 2rem;
  }

  .blog-thumbnail {
    flex-shrink: 0;
    width: 60px;
    height: 60px;
    border-radius: 4px;
    overflow: hidden;
    background: var(--ink-lighter);
  }

  .blog-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .blog-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    min-width: 0;
    flex: 1;
  }

  .blog-title {
    font-family: 'Zen Kaku Gothic New', sans-serif;
    font-size: 1rem;
    font-weight: 500;
    color: var(--paper-cream);
    margin: 0;
    transition: color 0.3s ease;
  }

  .blog-link:hover .blog-title {
    color: var(--vermillion);
  }

  .blog-description {
    font-family: 'Cormorant Garamond', serif;
    font-size: 0.85rem;
    color: var(--mist);
    line-height: 1.5;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .blog-site {
    font-family: 'Zen Kaku Gothic New', sans-serif;
    font-size: 0.75rem;
    color: var(--mist);
    opacity: 0.8;
  }

  .blog-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-shrink: 0;
  }

  .blog-date {
    font-family: 'Cormorant Garamond', serif;
    font-size: 0.85rem;
    color: var(--mist);
    white-space: nowrap;
  }

  .blog-arrow {
    width: 16px;
    height: 16px;
    color: var(--mist);
    transition: all 0.3s ease;
  }

  .blog-link:hover .blog-arrow {
    color: var(--vermillion);
    transform: translate(3px, -3px);
  }

  .no-articles {
    text-align: center;
    color: var(--mist);
    font-family: 'Zen Kaku Gothic New', sans-serif;
    padding: 2rem;
  }

  .back-link-container {
    margin-top: 3rem;
    text-align: center;
  }

  .back-link {
    display: inline-block;
    font-family: 'Zen Kaku Gothic New', sans-serif;
    font-size: 0.95rem;
    color: var(--mist-strong);
    text-decoration: none;
    padding: 0.75rem 1.5rem;
    border: 1px solid var(--ink-lighter);
    border-radius: 4px;
    transition: all 0.3s ease;
  }

  .back-link:hover {
    color: var(--vermillion);
    border-color: var(--vermillion);
  }

  @media (max-width: 640px) {
    .blog-link {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .blog-thumbnail {
      width: 100%;
      height: 160px;
    }

    .blog-meta {
      width: 100%;
      justify-content: space-between;
    }
  }
</style>
